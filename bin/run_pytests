SCRIPTPATH=$( cd "$(dirname "$0")" ; pwd -P )
HOST=${GGRC_DATABASE_HOST-"127.0.0.1"}
cd "${SCRIPTPATH}/../test"
find . -iname "*.pyc" -delete
mysql -uroot -proot -h$HOST -e "DROP DATABASE IF EXISTS ggrcdevtest; CREATE DATABASE ggrcdevtest CHARACTER SET utf8; USE ggrcdevtest;"
export GGRC_SETTINGS_MODULE="testing \
  ggrc_basic_permissions.settings.development \
  ggrc_risk_assessments.settings.development \
  ggrc_risks.settings.development \
  ggrc_workflows.settings.development \
  ggrc_gdrive_integration.settings.development"
db_migrate

#echo -e "\nRunning unit tests"
#nosetests unit --logging-clear-handlers ${@:1}
echo -e "\nRunning integration tests"
echo nosetests integration/ggrc_basic_permissions --logging-clear-handlers ${@:1}
nosetests integration/ggrc_basic_permissions --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/access_control --logging-clear-handlers ${@:1}
nosetests integration/ggrc/access_control --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/converters --logging-clear-handlers ${@:1}
nosetests integration/ggrc/converters --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/builder --logging-clear-handlers ${@:1}
nosetests integration/ggrc/builder --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/notifications --logging-clear-handlers ${@:1}
nosetests integration/ggrc/notifications --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/snapshotter --logging-clear-handlers ${@:1}
nosetests integration/ggrc/snapshotter --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/models --logging-clear-handlers ${@:1}
nosetests integration/ggrc/models --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/models/mixins --logging-clear-handlers ${@:1}
nosetests integration/ggrc/models/mixins --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/services --logging-clear-handlers ${@:1}
nosetests integration/ggrc/services --logging-clear-handlers ${@:1}
echo nosetests integration/ggrc/automapper --logging-clear-handlers ${@:1}
nosetests integration/ggrc/automapper --logging-clear-handlers ${@:1}
