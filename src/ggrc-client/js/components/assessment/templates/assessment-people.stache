<div class="flex-box flex-box-multi">
  <div class="flex-box width-100">
    {{#if rolesConflict}}
      <div class="width-100">
        <div class="alert alert-verifier">
          <p>
              Please be informed that Assignee and Verifier are the same person.
          </p>
        </div>
      </div>
    {{/if}}
  </div>

  <div class="width-100">
    {{#if infoPaneMode}}
      <custom-roles vm:instance:from="instance"
        vm:deferredSave:from="deferredSave"
        vm:orderOfRoles:from="orderOfRoles"
        vm:includeRoles:from="assessmentMainRoles"
        vm:conflictRoles:from="conflictRoles">
      </custom-roles>
    {{else}}
      <custom-roles-modal
        vm:instance:from="instance"
        vm:orderOfRoles:from="orderOfRoles"
        vm:conflictRoles:from="conflictRoles"
        vm:isNewInstance:from="new_object_form">
      </custom-roles-modal>
    {{/if}}
  </div>
</div>
