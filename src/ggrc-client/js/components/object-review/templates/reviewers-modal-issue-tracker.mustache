<div class="ggrc-form-item">
  <div class="ggrc-form-item__multiple-row">
    <label class="ggrc-form-item__label">
      Hotlist ID
    </label>
    <numberbox
      attr-data-id="code_txtbx"
      additional-class="input-block-level"
      placeholder="Enter Hotlist ID"
      {(value)}="issueTracker.hotlist_id">
    </numberbox>
  </div>
  <div class="ggrc-form-item__multiple-row {{#if emptyComponentId}}field-failure{{/if}}">
    <label class="form-label required-label ggrc-form-item__label">
      Component ID
      <i class="fa fa-asterisk"></i>
    </label>
    <numberbox
      attr-data-id="code_txtbx"
      additional-class="input-block-level"
      placeholder="Enter Component ID"
      {(value)}="issueTracker.component_id">
    </numberbox>
  </div>
  <div class="ggrc-form-item__multiple-row">
    <label class="ggrc-form-item__label">
      Issue Type
    </label>
    <div>
      {{issueTracker.issue_type}}
    </div>
  </div>
</div>

<div class="ggrc-form-item">
  <div class="ggrc-form-item__multiple-row">
    <label class="ggrc-form-item__label">
      Issue Priority
    </label>
    <dropdown
      options-list="priorities"
      name="issueTracker.issue_priority">
    </dropdown>
  </div>
  <div class="ggrc-form-item__multiple-row">
    <label class="ggrc-form-item__label">
      Issue Severity
    </label>
    <dropdown
      instance="instance"
      options-list="severities"
      name="issueTracker.issue_severity">
    </dropdown>
  </div>

  <div class="ggrc-form-item__multiple-row">
    <label class="form-label required-label ggrc-form-item__label">
      Issue Title
    </label>
    <input data-id="code_txtbx"
      class="input-block-level"
      placeholder="Enter Issue Title"
      type="text"
      {($value)}="issueTracker.title"
    />
  </div>
</div>
