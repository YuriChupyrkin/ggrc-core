{{#is_allowed 'update' instance context="for"}}
  {{#is singular "AssessmentTemplate"}}
    <assessment-template-clone-button
      vm:class:from="linkclass"
      vm:text:from="text"
      vm:objectType:from="singular"
      vm:parentId:from="instance.id"
      vm:parentType:from="instance.class.model_singular">
      {{content}}
    </assessment-template-clone-button>
  {{else}}
    <a href="javascript://" class="{{linkclass}}"
        {{#if text}}
        rel="tooltip"
        data-placement="bottom"
        data-original-title="{{text}}"
        {{/if}}
        data-update-hash="true"
        data-toggle="modal-ajax-form"
        data-modal-reset="reset"
        data-modal-class="modal-wide"
        data-object-singular="{{singular}}"
        data-object-plural="{{plural}}">
            {{content}}
    </a>
  {{/is}}
{{else}}
  {{#if_equals singular "Assessment"}}
      {{#is_auditor}}
        <a href="javascript://" class="{{linkclass}}"
            {{#if text}}
            rel="tooltip"
            data-placement="bottom"
            data-original-title="{{text}}"
            {{/if}}
            data-update-hash="true"
            data-toggle="modal-ajax-form"
            data-modal-reset="reset"
            data-modal-class="modal-wide"
            data-object-singular="{{singular}}"
            data-object-plural="{{plural}}">
                {{content}}
        </a>
      {{/is_auditor}}
  {{/if_equals}}
{{/is_allowed}}
