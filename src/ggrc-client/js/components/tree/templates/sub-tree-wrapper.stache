<div class="{{cssClasses}}">
  {{#if isOpen}}
    {{#directlyItems}}
      <sub-tree-item class="tree-item-element"
                     vm:extraCss:from="'directly-related'"
                     vm:instance:from="{.}"
                     vm:limitDepthTree:from="limitDepthTree"
      ></sub-tree-item>
    {{/directlyItems}}

    {{#if showPagination}}
      <tree-pagination vm:paging:from="paging"></tree-pagination>
    {{/if}}

    {{#if showMore}}
      <div class="sub-tree-link">
        <a href="{{showAllRelatedLink}}" target="_blank">
          Open in new tab to see all
        </a>
      </div>
    {{/if}}

    {{#if needToSplit}}
      <div class="sub-tree-link">
        <sub-tree-expander on:expandNotDirectly="expandNotDirectlyRelated()"
                           vm:expanded:from="notDirectlyExpanded"
                           vm:disabled:from="disabled"
                           vm:display:from="display">
          <a on:el:click="expandNotDirectly()" href="javascript://">
            <i class="fa fa-caret-{{#if expanded}}down{{else}}right{{/if}}"></i>
            Show objects not directly related to this {{contextName}}
          </a>
        </sub-tree-expander>
      </div>

      {{#if notDirectlyExpanded}}
        {{#notDirectlyItems}}
          <sub-tree-item class="tree-item-element"
                         vm:extraCss:from="'not-directly-related'"
                         vm:instance:from="{.}"
                         vm:limitDepthTree:from="limitDepthTree"
          ></sub-tree-item>
        {{/notDirectlyItems}}
      {{/if}}
    {{/if}}

    {{#if notResult}}
      <tree-no-results/>
    {{/if}}
  {{/if}}

  <div class="tree-spinner">
    <spinner vm:toggle:from="loading" vm:size:from="'large'"></spinner>
  </div>
</div>
