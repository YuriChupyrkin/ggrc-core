<div class="editable-people-group">
  <!-- editable people group header -->
  <content></content>

  {{#unless editableMode}}
    <object-list vm:items:bind="showPeople" vm:emptyMessage:from="emptyListMessage">
      <person-data class="people-group__readonly-person"
                   vm:person:from="{.}">
      </person-data>
    </object-list>

    {{#if showSeeMoreLink}}
      <div class="editable-people-group__see-more">
        <a href="javascript://" on:el:click="changeEditableMode(true)">See more</a>
      </div>
    {{/if}}
  {{else}}
    {{#if showPeopleGroupModal}}
      <people-group-modal
        vm:title:from="title"
        vm:isLoading:from="isLoading"
        vm:emptyListMessage:from="emptyListMessage"
        vm:people:bind="people"
        on:save="save()"
        on:cancel="cancel()">
      </people-group-modal>
    {{else}}
      <div class="inline-edit inline-edit--active">
        <div class="inline-edit__content editable-people-group__inline">
          <div class="editable-people-group__inline-content">
            <object-list vm:items:bind="people"
                         vm:isDisabled:from="isLoading"
                         vm:emptyMessage:from="emptyListMessage">
              <person-data vm:person:from="{.}">
                {{#unmapablePerson}}
                  <a href="javascript://"
                    class="editable-people-group__unmap {{#if isDisabled}}disabled{{/if}}"
                    on:el:click="unmap(person)">
                    <i class="fa fa-trash"></i>
                  </a>
                {{/unmapablePerson}}
              </person-data>
            </object-list>
            <div>
            {{#if isLoading}}
              <spinner vm:toggle:from="isLoading"></spinner>
            {{else}}
              {{^if_config_exist 'external_services.Person'}}
              <autocomplete vm:searchItemsType:from="'Person'"
                            on:itemSelected="personSelected(%event.selectedItem)"
                            vm:placeholder:from="placeholder">
              </autocomplete>
              {{else}}
              <external-data-autocomplete vm:type:from="'Person'"
                                          vm:placeholder:from="placeholder"
                                          vm:minLength:from="2"
                                          on:itemSelected="personSelected(%event.selectedItem)">
              </external-data-autocomplete>
              {{/if_config_exist}}
            {{/if}}
            </div>
            <ul class="inline-edit__controls inline-edit__controls--edit-mode">
                <li>
                    <a href="javascript://" on:el:click="save()">
                        <i class="fa fa-check"></i>
                    </a>
                </li>
                <li>
                    <a href="javascript://" on:el:click="cancel()">
                        <i class="fa fa-times"></i>
                    </a>
                </li>
            </ul>
          </div>
        </div>
      </div>
    {{/if}}
  {{/unless}}
</div>
