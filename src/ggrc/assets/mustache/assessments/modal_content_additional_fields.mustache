<div class="ggrc-form-item">
  <div class="ggrc-form-item__row">
    <label class="ggrc-form-item__label">
      Notes
    </label>
    <input data-id="note_txtbx"
      tabindex="10"
      class="input-block-level"
      placeholder="Enter Notes"
      name="notes"
      type="text"
      id="notes"
      {$value}="notes"/>
  </div>
</div>

<div class="ggrc-form-item ggrc-form-item__text-area">
  <div class="ggrc-form-item__row">
    <label class="ggrc-form-item__label">
      Description
    </label>
    <div class="wysiwyg-area">
      <textarea
        tabindex="11"
        id="control_description"
        class="span12 triple wysihtml5"
        name="description"
        placeholder="Enter Description">
          {{{description}}}
      </textarea>
    </div>
  </div>
</div>

