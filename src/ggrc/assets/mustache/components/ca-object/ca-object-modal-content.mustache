<form class="simple-modal__body">
    <div class="attachment-modal__field">
        <h6 class="attachment-modal__field-title">{{content.title}}</h6>
        <div class="attachment-modal__field-value">
          {{#if isPerson}}
              <person-info {person-obj}="content.value"></person-info>
          {{else}}
              <read-more {text}="content.value"></read-more>
          {{/if}}
        </div>
    </div>
    <div class="simple-modal__controls">
      {{#if comment}}
          <assessment-add-comment {instance}="instance" {(is-empty)}="isEmpty" {(state)}="state" {ca-ids}="caIds"
                                  comment-place-holder="Enter comment"></assessment-add-comment>
      {{/if}}
      {{#if evidence}}
        <related-documents {instance}="instance" {document-type}="2">
            <document-object-list
                tooltip="You can upload up to 10 files in a single batch"
                header="Evidence"
                {documents}="documents"
                {instance}="instance">
                <editable-document-object-list-item {document}="{.}">
                </editable-document-object-list-item>
            </document-object-list>
            <attach-button {updated-callback}="@loadDocuments" {instance}="instance">
            </attach-button>
        </related-documents>
      {{/if}}
    </div>
</form>
<div class="simple-modal__footer">
    <div class="flex-box flex-row-reverse">
      {{#if comment}}
          <button class="btn btn-small btn-green" {{#if isEmpty}}disabled{{/if}} ($click)="saveAttachments">Save</button>
      {{/if}}
        <button class="btn btn-link btn-small" ($click)="hide">Close</button>
    </div>
</div>
