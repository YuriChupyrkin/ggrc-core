<div class="read-more">
  {{#if text}}
      <div class="read-more__body {{cssClass}}">
        {{{text}}}
      </div>
      {{#if overflowing}}
        <div class="read-more__controls">
            <a can-click="toggle" class="read-more__btn">{{btnText}}</a>
        </div>
      {{/if}}
  {{else}}
      <span class="empty-message">None</span>
  {{/if}}
</div>
