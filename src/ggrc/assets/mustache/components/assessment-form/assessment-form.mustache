<div style="position: relative;">
  Form (see console output):
  {{#saved}}
    <div style="text-align: center; color: green; position: absolute; left: 48%; top: 0;">
      Saved!
    </div>
  {{/saved}}
  <br>
  <text-value-form-field {value}="'Test Field 1'"
                         {name}="'test-field-1'"
                         (value-changed)="fieldValueChanged(%event)"
  ></text-value-form-field>
  <text-value-form-field {value}="'Test Field 2'"
                         {name}="'test-field-2'"
                         (value-changed)="fieldValueChanged(%event)"
  ></text-value-form-field>
  <text-value-form-field {value}="'Test Field 3'"
                         {name}="'test-field-3'"
                         (value-changed)="fieldValueChanged(%event)"
  ></text-value-form-field>
  <br>
  <style>
    .fix-blur-on-disabled-button[disabled] {
      pointer-events: none;
    }
  </style>
  <button ($click)="save()"
          class="fix-blur-on-disabled-button"
          {{#saveDisabled}}disabled{{/saveDisabled}}>
    {{#if saving}}
      Saving...
    {{else}}
      Save
    {{/if}}
  </button>
</div>
