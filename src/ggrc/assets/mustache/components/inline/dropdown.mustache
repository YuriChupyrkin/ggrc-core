{{#if editMode}}
  <dropdown
    {class-name}="dropdownClass"
    name="context.value"
    {options-list}="dropdownOptions"
    {no-value}="dropdownNoValue">
  </dropdown>
{{else}}
  <readonly-inline-content
    {with-read-more}="withReadMore"
    {value}="context.value">
  </readonly-inline-content>
{{/if}}
