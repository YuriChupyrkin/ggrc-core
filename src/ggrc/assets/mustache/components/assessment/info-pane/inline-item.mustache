<assessment-inline-confirm-action
  (set-in-progress)="setInProgressState()"
  {on-state-change-dfd}="onStateChangeDfd"
  {type}="type"
  {with-read-more}="withReadMore"
  {is-editable-label}="isEditableLabel"
  {instance}="instance">
    <inline-form-control-item
      (inline-form-item-save)="saveInlineForm(%event)"
      {hide-edit}="hideEdit"
      {is-editable-label}="isEditableLabel"
      {dropdown-options}="dropdownOptions"
      {dropdown-class}="dropdownClass"
      {dropdown-no-value}="dropdownNoValue"
      {value}="value"
      {is-allow-edit}="isAllowEdit"
      {edit-mode}="editMode"
      {type}="type"
      {with-read-more}="withReadMore"
      {prop-name}="propName">
        <inline-edit-control
          (inline-save)="save(%event)"
          {hide-edit}="hideEdit"
          {is-editable-label}="isEditableLabel"
          {dropdown-options}="dropdownOptions"
          {dropdown-class}="dropdownClass"
          {dropdown-no-value}="dropdownNoValue"
          {edit-mode}="editMode"
          {is-allow-edit}="isAllowEdit"
          {is-loading}="isLoading"
          {instance}="instance"
          {value}="value"
          {type}="type"
          {with-read-more}="withReadMore">
            <content></content>
        </inline-edit-control>
    </inline-form-control-item>
</assessment-inline-confirm-action>