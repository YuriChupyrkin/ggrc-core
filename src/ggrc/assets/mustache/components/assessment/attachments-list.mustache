<h6>Evidence</h6>
<object-list {items}="mappedItems" {empty-message}="noItemsText">
  <action-toolbar {document}="{.}" class="action-toolbar">
    <document-object-list-item {instance}="document"></document-object-list-item>
    {{#if showAction}}
      <div class="action-toolbar__controls">
        {{#is_allowed 'update' instance context='for'}}
          <action-toolbar-control>
            <unmap-button {destination}="instance" {source}="document">
              <i class="fa fa-trash"></i>
            </unmap-button>
          </action-toolbar-control>
        {{/is_allowed}}
      </div>
    {{/if}}
  </action-toolbar>
</object-list>
<div>
{{#if_mapping_ready "audits" instance}}
  {{#is_allowed 'update' instance context='for'}}
    {{{render_hooks "Request.gdrive_evidence_storage"}}}
  {{/is_allowed}}
{{/if_mapping_ready}}
</div>
