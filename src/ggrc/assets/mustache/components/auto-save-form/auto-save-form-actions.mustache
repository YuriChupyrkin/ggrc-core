{{#if formEditMode}}
  <button class="btn btn-small save-button"
          ($click)="save()"
          {{#saveDisabled}}disabled{{/saveDisabled}}>
    {{#if formSaving}}
      Saving...
    {{else}}
      Save Changes
    {{/if}}
  </button>
{{else}}
  <button class="btn btn-small edit-button"
          ($click)="edit()">
    Edit Answers
  </button>
{{/if}}
