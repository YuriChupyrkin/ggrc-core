{{#saved}}
  <div style="text-align: center; color: green; position: absolute; left: 48%; top: 0;">
    Saved!
  </div>
{{/saved}}
<br>
<div class="fields-wrapper">
  {{#fields}}
    <div class="field-wrapper">
      <label for="form-field-{{id}}">{{title}}</label>
      {{#switch type}}
        {{#case 'input'}}
          <text-value-form-field {value}="value"
                                 {field-id}="id"
                                 {placeholder}="placeholder"
                                 (value-changed)="fieldValueChanged(%event)"
          ></text-value-form-field>
        {{/case}}
        {{#case 'text'}}
          <rich-text-value-form-field {value}="value"
                                      {field-id}="id"
                                      {placeholder}="placeholder"
                                      (value-changed)="fieldValueChanged(%event)"
          ></rich-text-value-form-field>
        {{/case}}
        {{#case 'checkbox'}}
          <checkbox-value-form-field {value}="value"
                                     {field-id}="id"
                                     (value-changed)="fieldValueChanged(%event)"
          ></checkbox-value-form-field>
        {{/case}}
      {{/switch}}
    </div>
  {{/fields}}
</div>
<br>
<button ($click)="save()"
        class="save-button"
        {{#saveDisabled}}disabled{{/saveDisabled}}>
  {{#if saving}}
    Saving...
  {{else}}
    Save
  {{/if}}
</button>
