<div class="row-fluid wrap-row">
  <div class="span12">
    <h6>Buganizer</h6>
    <label class="input--inline">
        <input type="checkbox" can-value="instance.buganizer_integrated">
          <span>
            Buganizer Link (If it turned on, one bug will be generated for each assessment generated)
          </span>
      </label>
  </div>
</div>
<div class="row-fluid wrap-row">
  <div class="span4">
    <h6>Hotlist ID</h6>
    {{#if instance.buganizer_hotlist_id}}
      {{instance.buganizer_hotlist_id}}
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
  <div class="span4">
    <h6>Component ID</h6>
    {{#if instance.buganizer_component_id}}
      {{instance.buganizer_component_id}}
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
  <div class="span4">
    <h6>Issue Type</h6>
    {{#if instance.buganizer_issue_type}}
      {{instance.buganizer_issue_type}}
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
</div>
<div class="row-fluid wrap-row">
  <div class="span4">
    <h6>Issue Priority</h6>
    {{#if instance.buganizer_issue_priority}}
      {{instance.buganizer_issue_priority}}
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
  <div class="span4">
    <h6>Issue Severity</h6>
    {{#if instance.buganizer_issue_severity}}
      {{instance.buganizer_issue_severity}}
    {{else}}
      <span class="empty-message">None</span>
    {{/if}}
  </div>
</div>
